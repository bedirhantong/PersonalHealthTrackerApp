<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupPhysicalInfo"
    android:background="@drawable/login_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="295dp"
        android:layout_height="11dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="44dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/UserInfoPageTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white" />

        <Button
            android:id="@+id/BodyMassIndexPageTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonColour" />

        <Button
            android:id="@+id/AddAcitivitesPageTransition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>


    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Mass Index"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="92dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/AgeViewHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How old are you?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="218dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ageResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="218dp"
        tools:ignore="MissingConstraints" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="301dp"
        android:layout_height="40dp"
        android:max="100"
        android:min="18"
        android:progress="25"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="246dp"
        android:thumb="@drawable/seekbar_thumb"/>

    <TextView
        android:id="@+id/heightViewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your height?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/heightResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="167"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="343dp" />

    <SeekBar
        android:id="@+id/heightSeekBar"
        android:layout_width="301dp"
        android:layout_height="40dp"
        android:max="100"
        android:min="18"
        android:progress="25"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="371dp"
        android:thumb="@drawable/seekbar_thumb"/>

    <SeekBar
        android:id="@+id/weightSeekBar"
        android:layout_width="301dp"
        android:layout_height="40dp"
        android:max="170"
        android:min="50"
        android:progress="25"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="507dp"
        android:thumb="@drawable/seekbar_thumb"/>

    <TextView
        android:id="@+id/weightViewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your weight?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/weightResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/genderViewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your gender?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="595dp" />

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="638dp">

        <RadioButton
            android:id="@+id/maleButton"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:text="male"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/femaleButton"
            android:layout_width="122dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:text="female" />

        <RadioButton
            android:id="@+id/notToSayButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="prefer not to say" />

    </RadioGroup>

    <Button
        android:id="@+id/prevButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="744dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="744dp" />


</androidx.constraintlayout.widget.ConstraintLayout>