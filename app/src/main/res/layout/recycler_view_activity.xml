<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_view_element_shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/recycler_view_roadTravelledText"
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:text="Travelled"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/recycler_view_elapsedTimeText"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_activity_type" />

        <TextView
            android:id="@+id/recycler_view_elapsedTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Elapsed Time"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_activity_type"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_activity_type"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_activity_type" />

        <TextView
            android:id="@+id/recycler_view_duration_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="18dp"
            android:text="00:12:34"
            android:textAlignment="center"
            android:textColor="#F8C06D"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_elapsedTimeText"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_elapsedTimeText"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_elapsedTimeText"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/recycler_view_road_travelled_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="18dp"
            android:text="13 km"
            android:textAlignment="center"
            android:textColor="#F8C06D"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_view_duration_view"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_roadTravelledText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_roadTravelledText"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_roadTravelledText"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/recycler_view_energyConsumpText"
            android:layout_width="108dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:text="Energy"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toEndOf="@+id/recycler_view_elapsedTimeText"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_activity_type" />

        <TextView
            android:id="@+id/recycler_view_kcal_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="18dp"
            android:text="149kcal"
            android:textAlignment="center"
            android:textColor="#F8C06D"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_view_duration_view"
            app:layout_constraintEnd_toEndOf="@+id/recycler_view_energyConsumpText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/recycler_view_energyConsumpText"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_energyConsumpText"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/recycler_view_activity_type"
            android:layout_width="183dp"
            android:layout_height="61dp"
            android:fontFamily="sans-serif-light"
            android:padding="18dp"
            android:text="Running Activity"
            android:textAlignment="center"
            android:textColor="#F6EBEB"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/recycler_view_bottom_seperator"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#00E9E9E9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>