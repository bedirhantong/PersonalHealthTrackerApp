<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_background"
    tools:context=".ui.IntroFragment">

    <ImageView
        android:id="@+id/eponame"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eponame"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eponame"
        android:layout_marginBottom="16dp"
        android:background="@drawable/intro_button_background"
        android:paddingStart="30dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_signup"
        app:layout_constraintVertical_bias="0.448"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/eponame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/intro_button_background"
        android:onClick="openSignupPage"
        android:paddingStart="30dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="LET'S GET STARTED"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eponame"
        app:layout_constraintVertical_bias="0.858"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/bottomStart"
        android:layout_width="414dp"
        android:layout_height="160dp"
        android:background="#94000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>